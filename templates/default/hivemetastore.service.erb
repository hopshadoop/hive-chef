[Unit]
Description = Hive metaserver
After = syslog.target network.target remote-fs.target <%= @deps %>

[Service]
User = <%= node['hive2']['user'] %>

ExecStartPre=/bin/bash -c 'while ! /usr/bin/host <%= @nn_rpc_endpoint %> ; do if systemctl list-units --full -all | grep -Fq 'namenode'; then if ! systemctl is-active --quiet namenode; then /bin/sleep 5; else exit 0; fi; else /bin/sleep 5; fi;  done'
ExecStart = <%= node['hive2']['base_dir'] %>/bin/hive --service metastore
LimitNOFILE = 20000
TimeoutSec= 10min

Type = simple

[Install]
WantedBy = multi-user.target
