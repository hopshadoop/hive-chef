[Unit]
Description = Hive metaserver
After = syslog.target network.target remote-fs.target <%= @deps %>
StartLimitIntervalSec=120
StartLimitBurst=10

[Service]
User = <%= node['hive2']['user'] %>

ExecStart = <%= node['hive2']['base_dir'] %>/bin/hiveserver2
LimitNOFILE = 20000
TimeoutSec= 10min
Restart=on-failure
RestartSec=2

Type = simple

[Install]
WantedBy = multi-user.target
